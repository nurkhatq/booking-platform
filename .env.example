# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Domain Configuration
BASE_DOMAIN=jazyl.tech
MAIN_DOMAIN=jazyl.tech
ADMIN_DOMAIN=admin.jazyl.tech

# Database Configuration
DATABASE_URL=postgresql://booking_user:booking_password@postgres:5432/booking_platform
POSTGRES_USER=booking_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=booking_platform
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=change_this_to_a_secure_random_string_at_least_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# WhatsApp Service Configuration
WHATSAPP_SERVICE_URL=http://whatsapp-service:3000
WHATSAPP_ENABLED=true
WHATSAPP_SESSION_PATH=/app/.wwebjs_auth

# Service Ports
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0

USER_SERVICE_PORT=8001
USER_SERVICE_HOST=0.0.0.0

BOOKING_SERVICE_PORT=8002
BOOKING_SERVICE_HOST=0.0.0.0

NOTIFICATION_SERVICE_PORT=8003
NOTIFICATION_SERVICE_HOST=0.0.0.0

PAYMENT_SERVICE_PORT=8004
PAYMENT_SERVICE_HOST=0.0.0.0

ADMIN_SERVICE_PORT=8005
ADMIN_SERVICE_HOST=0.0.0.0

WHATSAPP_SERVICE_PORT=3000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=100
CORS_ORIGINS=*

# Business Logic
DEFAULT_TRIAL_DAYS=30
BOOKING_ADVANCE_LIMIT_DAYS=30
CANCELLATION_HOURS=2
REMINDER_HOURS=24,2

# Internationalization
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en,kk

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# Background Workers
WORKER_COUNT=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY_SECONDS=30
