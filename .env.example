# Environment
ENVIRONMENT=development

# Domain Configuration
BASE_DOMAIN=jazyl.tech
MAIN_DOMAIN=jazyl.tech
ADMIN_DOMAIN=admin.jazyl.tech

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=booking_platform
DB_USER=booking_user
DB_PASSWORD=change_me_in_production
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_at_least_32_characters_long
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Service Ports
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
USER_SERVICE_GRPC_PORT=50051
BOOKING_SERVICE_PORT=8082
BOOKING_SERVICE_GRPC_PORT=50052
NOTIFICATION_SERVICE_PORT=8083
NOTIFICATION_SERVICE_GRPC_PORT=50053
PAYMENT_SERVICE_PORT=8084
PAYMENT_SERVICE_GRPC_PORT=50054
ADMIN_SERVICE_PORT=8085
ADMIN_SERVICE_GRPC_PORT=50055

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@jazyl.tech

# SMS Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your_twilio_account_sid
SMS_API_SECRET=your_twilio_auth_token

# Security Configuration
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
CORS_ORIGINS=*.jazyl.tech,localhost:3000

# Background Jobs
WORKER_COUNT=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=30s

# Business Logic
DEFAULT_TRIAL_DAYS=30
BOOKING_ADVANCE_LIMIT=30d
CANCELLATION_HOURS=2
REMINDER_HOURS=24,2

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,kk

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/jazyl.tech.pem
SSL_KEY_PATH=/etc/ssl/private/jazyl.tech.key